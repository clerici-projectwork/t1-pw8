{
    "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
    "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
    },
    "files": {
      "ignoreUnknown": false,
      "ignore": ["**/dist", "**/node_modules"]
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "lineWidth": 120,
      "indentWidth": 2,
      "lineEnding": "lf"
    },
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "noUnusedImports": {
            "fix": "safe",
            "level": "error"
          }
        },
        "style": {
          "noNonNullAssertion": "off"
        },
        "complexity": {
          "noForEach": "off"
        }
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "jsxQuoteStyle": "single",
        "trailingCommas": "none",
        "semicolons": "always",
        "arrowParentheses": "asNeeded"
      }
    }
  }